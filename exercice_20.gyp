#faire une liste de nombre entier

l = [5,3,6,8,1]

print("\n")
print("la liste est :", l)
print("\n")

#Trier la liste dans l'ordre croissant

l.sort()

#Afficher la liste croissante

print("La liste est triée de façon croissante et décroissante")

print("La liste croissante :", l)

#Trier la liste dans l'ordre décroissant

l.sort(reverse = True)

#Afficher la liste décroissante

print("La liste décroissante : ", l)
print("\n")
